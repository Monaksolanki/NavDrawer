<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.monika.navdrawer.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:weightSum="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Your Profile"

                android:textAlignment="center"
                android:textColor="#ab447d"
                android:textColorHighlight="#b74141"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                android:id="@+id/textView2"
                android:layout_below="@+id/done"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name:"
                android:id="@+id/fname"
                android:layout_below="@+id/textView2"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/firstname"
                android:layout_below="@+id/textView2"
                android:layout_toRightOf="@+id/birth"
                android:layout_toEndOf="@+id/birth"
                android:layout_alignParentEnd="true"

                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name:"
                android:id="@+id/lname"
                android:layout_below="@+id/firstname"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lastname"
                android:layout_below="@+id/firstname"
                android:layout_alignLeft="@+id/firstname"
                android:layout_alignStart="@+id/firstname"
                android:layout_alignParentEnd="true"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Id:"
                android:id="@+id/email"
                android:layout_below="@+id/lastname"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailid"
                android:layout_below="@+id/lname"
                android:layout_alignLeft="@+id/lastname"
                android:layout_alignStart="@+id/lastname"
                android:layout_alignParentEnd="true"

                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:id="@+id/pass"
                android:layout_below="@+id/emailid"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:enabled="false"
                android:id="@+id/password"
                android:layout_alignLeft="@+id/emailid"
                android:layout_alignStart="@+id/emailid"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/pass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:id="@+id/addr"
                android:layout_below="@+id/password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/address"
                android:enabled="false"
                android:layout_below="@+id/password"
                android:layout_toEndOf="@+id/pass"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/pincode"
                android:layout_alignStart="@+id/pincode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode:"
                android:id="@+id/pin"
                android:layout_below="@+id/address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/pincode"
                android:enabled="false"
                android:layout_alignBottom="@+id/pin"
                android:layout_alignLeft="@+id/password"
                android:layout_alignStart="@+id/password"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number:"
                android:id="@+id/m_no"
                android:layout_below="@+id/pincode"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_above="@+id/adhar_id"
                android:layout_alignRight="@+id/pass"
                android:layout_alignEnd="@+id/pass" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/mobile_no"
                android:enabled="false"
                android:layout_below="@+id/pincode"
                android:layout_toEndOf="@+id/m_no"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/pincode"
                android:layout_alignStart="@+id/pincode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Number:"
                android:id="@+id/e_no"
                android:layout_below="@+id/mobile_no"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_alignRight="@+id/fname"
                android:layout_alignEnd="@+id/fname" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/emergency_no"
                android:enabled="false"
                android:layout_alignBottom="@+id/e_no"
                android:layout_toEndOf="@+id/e_no"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/adhar_id"
                android:layout_alignStart="@+id/adhar_id" />

            <!--<DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group:"
                android:id="@+id/bg"
                android:layout_below="@+id/gender"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/bloodgroup"
                android:layout_below="@+id/bg"
                android:enabled="false"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/pincode"
                android:layout_alignStart="@+id/pincode" />



            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/edit"
                android:background="#b9aec6"
                android:layout_below="@+id/doc5"
                android:layout_marginTop="15dp" />
            <!-- android:layout_alignTop="@+id/doc5"-->
            />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/save"
                android:background="#b9aec6"
                android:layout_below="@+id/doc5"
                android:layout_alignRight="@+id/age"
                android:layout_alignEnd="@+id/age"
                android:layout_marginTop="15dp" />




        </LinearLayout>
    </ScrollView>
</RelativeLayout>
